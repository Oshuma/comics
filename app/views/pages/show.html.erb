<div class="center-align">
  <%= image_tag(@page.image.url(:viewer), class: 'responsive-img') %>
</div>

<div class="center-align">
  <ul class="pagination">
    <li class="<%= @page.previous_page.present? ? 'waves-effect' : 'disabled' %>">
      <%= link_to([@comic, @page.previous_page]) do %>
        <i class="material-icons">chevron_left</i>
      <% end %>
    </li>

    <li>
      <%= @page.number %> / <%= @comic.pages.count %>
    </li>

    <li class="<%= @page.next_page.present? ? 'waves-effect' : 'disabled' %>">
      <%= link_to([@comic, @page.next_page]) do %>
        <i class="material-icons">chevron_right</i>
      <% end %>
    </li>
  </ul>
</div>
