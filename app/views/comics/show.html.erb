<% content_for(:navbar) do %>
  <div class="nav-item d-md-none d-lg-block">
    <%= link_to(@comic.group, class: 'nav-link') do %>
      <%= @comic.group.name %>
      <i class="bi bi-chevron-compact-right"></i>
    <% end %>
  </div>

  <div class="nav-item navbar-text">
    <%= @comic.name %>
  </div>
<% end %>

<div class="row mt-3">
  <% @comic.pages.each do |page| %>
    <div class="col-lg-2 col-md-3">
      <div class="card">
        <%= link_to(comic_page_path(@comic, page)) do %>
          <%= image_tag(page.image.variant(:thumb), class: 'card-img-top') %>
        <% end %>

        <div class="card-footer text-center fw-bold">
          <%= page.number %>

          <span class="float-end">
            <% if page.read? %>
              <i class="bi bi-check-lg fs-4 text-success"></i>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
