<% content_for(:navbar) do %>
  <li><%= link_to(@comic.group.name, @comic.group) %></li>
  <li><i class="material-icons">trending_flat</i></li>
  <li><%= link_to(@comic.filename, @comic) %></li>
<% end %>

<% @comic.pages.each_slice(4) do |row| %>
  <div class="row">
    <% row.each do |page| %>
      <div class="col s3">
        <div class="card">
          <div class="card-image">
            <%= link_to(image_tag(page.image.url(:thumb)), [@comic, page]) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
