<% content_for(:navbar) do %>
  <li><%= link_to(@comic.group.name, @comic.group) %></li>
  <li class="active"><%= link_to(@comic.filename, @comic) %></li>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-cog"></i> Manage <span class="fa fa-caret-down"></span>
    </a>

    <ul class="dropdown-menu">
      <li>
        <%= link_to(@comic, method: :delete, data: { confirm: 'Delete comic?' }) do %>
          <i class="fa fa-fw fa-trash"></i> Delete Comic
        <% end %>
      </li>
    </ul>
  </li>
<% end %>

<% @comic.pages.each_slice(4) do |row| %>
  <div class="row">
    <% row.each do |page| %>
      <div class="col-sm-3 col-md-2">
        <div class="thumbnail">
          <%= link_to(thumb_or_placeholder_image_tag(page.image), [@comic, page]) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
