<%= form_for(Comic.new, html: { multipart: true }) do |f| %>
  <div class="row">
    <div class="file-field input-field col s12">
      <div class="btn">
        <span>Choose Files</span>
        <input
           id="comic-upload"
           type="file"
           name="comics[][archive]"
           multiple
           data-url="<%= comics_path %>"
         />
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <button id="start-upload" type="button">Start</button>
      <button id="stop-uploads" type="button">Stop</button>

      <br/>
      <span>Total progress: <span id="total-progress">0%</span></span>
    </div>
  </div>
<% end %>

<div class="progress hide">
  <div class="determinate" style="width: 0%;"></div>
</div>

<div class="row">
  <ul id="upload-results" class="col s6 collection hide">
  </ul>
</div>
