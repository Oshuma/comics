<div id="edit-comic-<%= dom_id(comic) %>-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: comic) do |f| %>
        <div class="modal-body">
          <div class="form-floating mb-3">
            <%= f.text_field :name, placeholder: 'Comic name...', class: 'form-control', required: true %>
            <%= f.label :name, 'Name' %>
          </div>

          <% if @groups.present? %>
            <div class="form-floating">
              <%=
                f.collection_select :group_id,
                  @groups, :id, :name,
                  {prompt: 'Select Group'},
                  {class: 'form-select'}
              %>
              <%= f.label :group, 'Group' %>
            </div>
          <% end %>
        </div>

        <div class="modal-footer">
          <%= f.submit('Save', class: 'btn btn-outline-primary') %>
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
