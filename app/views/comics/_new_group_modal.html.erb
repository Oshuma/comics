<div id="new-group-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: current_user.groups.new) do |f| %>
        <div class="modal-body">
          <div class="form-floating">
            <%= f.text_field :name, placeholder: 'Group name...', class: 'form-control' %>
            <%= f.label :name, 'Group Name' %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit('Save', class: 'btn btn-outline-primary') %>
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
