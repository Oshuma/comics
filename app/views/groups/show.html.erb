<% content_for(:navbar) do %>
  <div class="nav-item dropdown d-md-none d-lg-block">
    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" role="button">
      <i class="bi bi-gear"></i>
    </a>

    <ul class="dropdown-menu">
      <li>
        <%= link_to(new_comic_path(group_id: @group.id), class: 'dropdown-item') do %>
          <i class="bi bi-cloud-arrow-up"></i> Upload Comics
        <% end %>
      </li>
    </ul>
  </div>

  <span class="nav-item navbar-text">
    <%= @group.name %>
  </span>
<% end %>

<div class="row mt-3">
  <% if @comics.present? %>
    <%= render @comics %>
  <% else %>
    <div class="col-md-auto">
      <div class="card">
        <div class="card-header">No Comics</div>

        <div class="card-body">
          <%= link_to(new_comic_path(group_id: @group.id), class: 'btn btn-lg btn-outline-success') do %>
            <i class="bi bi-cloud-arrow-up"></i> Upload Some!
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render 'modal', group: @group %>
