<%= render 'nav' %>

<div class="row mt-3">
  <% if @groups.present? %>
    <% @groups.each do |group| %>
      <% if group.has_comics? %>
        <%= render group %>
      <% else %>
        <%# TODO: Add this partial. %>
        <%#= render 'empty_group', group: group %>
      <% end %>
    <% end %>
  <% else %>
    <div class="col-md-auto">
      <div class="card">
        <div class="card-header">No Comics</div>

        <div class="card-body">
          <%= link_to(new_comic_path, class: 'btn btn-lg btn-outline-success') do %>
            <i class="bi bi-cloud-arrow-up"></i> Upload Some!
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
