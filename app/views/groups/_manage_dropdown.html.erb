<div class="manage-link hidden dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="<%= dom_id(group) %>-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Manage
    <span class="caret"></span>
  </button>

  <ul class="dropdown-menu" aria-labelledby="<%= dom_id(group) %>-dropdown">
    <li>
      <%= link_to('#edit-group', data: { toggle: 'modal', target: "#edit-#{dom_id(group)}-modal" }) do %>
        <i class="fa fa-fw fa-pencil"></i> Edit
      <% end %>
    </li>

    <% if group.has_comics? %>
      <li class="divider"></li>

      <li>
        <%= link_to(delete_read_group_path(group), method: :delete, data: { confirm: 'Remove all read comics?' }) do %>
          <i class="fa fa-fw fa-eye-slash"></i> Remove Read Comics
        <% end %>
      </li>

      <li>
        <%= link_to(delete_comics_group_path(group), method: :delete, class: 'manage-link hidden', data: { confirm: 'Remove all comics in this group?' }) do %>
          <i class="fa fa-fw fa-ban"></i> Remove All Comics
        <% end %>
      </li>
    <% end %>

    <li class="divider"></li>

    <li>
      <%= link_to(group, method: :delete, class: 'manage-link hidden', remote: true, data: { confirm: 'Delete this group?' }) do %>
        <i class="fa fa-fw fa-trash"></i> Delete
      <% end %>
    </li>
  </ul>
</div>

<%= render 'modal', group: group %>
